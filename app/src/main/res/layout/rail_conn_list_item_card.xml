<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rail_conn_item_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/railCardChildHeight"
    app:cardCornerRadius="2dp"
    app:cardElevation="@dimen/cardChildElevation"
    android:layout_marginTop="@dimen/railCardChildMarginTop"
    android:layout_marginBottom="@dimen/railCardChildMarginBottom"
    android:layout_marginLeft="@dimen/railCardChildMarginLeft"
    android:layout_marginRight="@dimen/railCardChildMarginRight"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="WTR"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/lineNameConn"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="West Trenton Line"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:id="@+id/trainLabelConn"
            android:paddingLeft="2dp"
            android:paddingBottom="2dp"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/lineNameConn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp"
            android:text="#4340 to Philmont"
            android:textColor="@color/black"
            android:id="@+id/trainInfoConn"
            android:padding="2dp"
            android:layout_alignBottom="@+id/lineNameConn"
            android:layout_alignStart="@+id/trainLabelConn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="12:00 PM"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/arrivalTimeConn"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>