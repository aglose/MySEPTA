<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/map"
        tools:context="com.example.andrew.testapp.MapsActivity"
        android:name="com.google.android.gms.maps.MapFragment" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/refreshButton"
        android:layout_width="@dimen/refresh_button_diameter"
        android:layout_height="@dimen/refresh_button_diameter"
        android:layout_gravity="end|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/refresh_button_margin"
        android:layout_marginBottom="@dimen/refresh_button_margin" />
</RelativeLayout>