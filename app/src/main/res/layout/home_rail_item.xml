<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_rail_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardChildHeight"
    app:cardCornerRadius="2dp"
    app:cardElevation="@dimen/cardChildElevation"
    android:layout_marginBottom="@dimen/cardChildMarginVertical"
    android:layout_marginLeft="@dimen/cardChildMarginHorizontal"
    android:layout_marginRight="@dimen/cardChildMarginHorizontal"
    android:layout_marginTop="@dimen/cardChildMarginVertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/arrivalLabel"
            android:textColor="@color/black"
            android:text="@string/to_rail_text"
            android:textSize="14sp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/arrivalLabel"
            android:layout_alignParentEnd="true"
            android:id="@+id/arrivalStation"
            android:textColor="@color/black"
            android:text="Philmont"
            android:textSize="14sp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/departureLabel"
            android:textColor="@color/black"
            android:text="@string/from_rail_text"
            android:textSize="14sp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/departureLabel"
            android:id="@+id/departureStation"
            android:textColor="@color/black"
            android:text="@string/from_rail_text"
            android:textSize="14sp"
            android:padding="5dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>