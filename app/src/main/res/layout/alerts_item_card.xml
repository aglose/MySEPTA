<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alerts_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    android:layout_marginLeft="@dimen/cardMarginHorizontal"
    android:layout_marginRight="@dimen/cardMarginHorizontal"
    android:layout_marginTop="2dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Market Frankford Line"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/route_name"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="right"
            android:textSize="13sp"
            android:text="Nov 11th 2015 10:53AM "
            android:textColor="@color/grey"
            android:id="@+id/lastUpdate"
            android:padding="2dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="delay"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:id="@+id/desc"
            android:padding="5dp"
            android:layout_below="@+id/typeOfAlertText"
            android:layout_alignParentStart="true" />



        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:id="@+id/alert_type"
            android:src="@drawable/ic_alertg"
            android:layout_alignTop="@+id/typeOfAlertText"
            android:layout_toStartOf="@+id/lastUpdate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:textSize="12sp"
            android:text="Type of Alert"
            android:id="@+id/typeOfAlertText"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/route_name"
            android:layout_toStartOf="@+id/alert_type" />


    </RelativeLayout>

</android.support.v7.widget.CardView>