<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="team5.capstone.com.mysepta.SubwayActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/subway_toolbar"
        ></include>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        android:id="@+id/subwayHeader"
        android:layout_height="@dimen/cardHeaderHeight"
        app:cardElevation="@dimen/cardHeaderElevation"
        android:transitionName="@string/cardTransitionName"
        android:layout_marginBottom="@dimen/cardHeaderMarginVertical"
        android:layout_marginLeft="@dimen/cardHeaderMarginHorizontal"
        android:layout_marginRight="@dimen/cardHeaderMarginHorizontal"
        android:layout_marginTop="@dimen/cardHeaderMarginVertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Location Header"
                android:textSize="20dp"
                android:id="@+id/locationHeaderText"
                android:transitionName="@string/locationTransitionName"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:text="Direction"
            android:textColor="@android:color/black"
            android:id="@+id/direction"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:text="Direction: "
            android:textColor="@android:color/black"
            android:id="@+id/textView3" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/subwayScheduleView"
        android:layout_width="match_parent"
        android:fastScrollEnabled="true"
        android:layout_height="match_parent"/>


</LinearLayout>
